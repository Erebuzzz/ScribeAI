generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RecordingState {
  IDLE
  RECORDING
  PAUSED
  PROCESSING
  COMPLETED
}

model User {
  id             String        @id @default(cuid())
  email          String        @unique
  hashedPassword String?
  name           String?
  imageUrl       String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  authSessions   AuthSession[]
  sessions       Session[]
}

model AuthSession {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Session {
  id           String             @id @default(cuid())
  userId       String
  user         User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  title        String             @default("Untitled Session")
  state        RecordingState     @default(IDLE)
  startedAt    DateTime           @default(now())
  endedAt      DateTime?
  audioUrl     String?
  summary      String?
  transcript   TranscriptSegment[]
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
}

model TranscriptSegment {
  id        String   @id @default(cuid())
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  text      String
  startedAt Float    @default(0)
  endedAt   Float    @default(0)
  createdAt DateTime @default(now())

  @@index([sessionId])
}
