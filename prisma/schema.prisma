generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RecordingState {
  IDLE
  RECORDING
  PAUSED
  PROCESSING
  COMPLETED
}

model User {
  id             String        @id @default(cuid())
  email          String        @unique
  hashedPassword String?
  name           String?
  image          String?
  emailVerified  Boolean       @default(false)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  authSessions   AuthSession[]
  accounts       AuthAccount[]
  sessions       Session[]
}

model AuthSession {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt  DateTime
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model AuthAccount {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  providerId  String
  accountId   String
  accessToken String?
  refreshToken String?
  idToken     String?
  expiresAt   DateTime?
  password    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([providerId, accountId])
  @@index([userId])
}

model AuthVerification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())

  @@index([identifier])
}

model Session {
  id           String             @id @default(cuid())
  userId       String
  user         User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  title        String             @default("Untitled Session")
  state        RecordingState     @default(IDLE)
  startedAt    DateTime           @default(now())
  endedAt      DateTime?
  audioUrl     String?
  summary      String?
  transcript   TranscriptSegment[]
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
}

model TranscriptSegment {
  id        String   @id @default(cuid())
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  text      String
  startedAt Float    @default(0)
  endedAt   Float    @default(0)
  createdAt DateTime @default(now())

  @@index([sessionId])
}
